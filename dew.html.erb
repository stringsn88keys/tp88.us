<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mountain Dew Price Equivalents</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="dewCalc.js" type="text/javascript" charset="utf-8" defer></script>
  </head>
  <body>
    <div class="container my-4">
      <h1 class="text-center mb-4">Mountain Dew Equivalent Prices</h1>
      <form>
        <%
          packages = [
            { count: 12, size: 12, units: :oz, container: :cans },
            { count: 24, size: 12, units: :oz, container: :cans },
            { count: 6, size: 0.5, units: :L, container: :bottles },
            { count: 1, size: 2, units: :L, container: :bottles },
          ]

          def weight(package)
            package[:count] * package[:size] * (package[:units] == :L ? 33.814 : 1)
          end

          def initial(package)
            "%.2f" % (weight(package) * 0.03696693677)
          end
        %>
        <div class="row">
          <% packages.each do |package| %>
            <% id="size#{package[:count]}x#{package[:size]}#{package[:oz]}" %>
            <div class="col-12 col-md-6 mb-3">
              <label for="<%= id %>" class="form-label">
                <%= package[:count] %> x <%= package[:size] %><%= package[:units] %> Price:
              </label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <input 
                  type="number" 
                  id="<%= id %>" 
                  class="form-control" 
                  min="1" 
                  max="1000" 
                  step="0.01" 
                  weight="<%= weight(package) %>" 
                  value="<%= initial(package) %>"
                >
              </div>
            </div>
          <% end %>
        </div>
      </form>
    </div>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Y6GL6564XD"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-Y6GL6564XD');
    </script>
  </body>
</html>